<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.ConsultationActivity"
    tools:showIn="@layout/activity_consultation"
    android:id="@+id/consultation_paiement_view">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/horizontalScrollView"
            android:layout_gravity="center_horizontal"
            android:fillViewport="false"
            android:scrollbars="none">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/radio_choix_annee"
                >

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/annee_2016"
                    android:checked="false"
                    android:text="2016"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/annee_2017"
                    android:checked="false"
                    android:text="2017"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/annee_2018"
                    android:checked="false"
                    android:text="2018"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/annee_2019"
                    android:checked="false"
                    android:text="2019"
                    android:layout_gravity="center_vertical"
                    />

            </RadioGroup>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/horizontalScrollViews"
            android:layout_gravity="center_horizontal"
            android:fillViewport="false"
            android:scrollbars="none">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/radio_choix_mois"
                >

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/janvier"
                    android:checked="false"
                    android:text="Janvier"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fevrier"
                    android:checked="false"
                    android:text="Février"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mars"
                    android:checked="false"
                    android:text="Mars"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/avril"
                    android:checked="false"
                    android:text="Avril"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mai"
                    android:checked="false"
                    android:text="Mai"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/juin"
                    android:checked="false"
                    android:text="Juin"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/juillet"
                    android:checked="false"
                    android:text="Juillet"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/aout"
                    android:checked="false"
                    android:text="Aout"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/septembre"
                    android:checked="false"
                    android:text="Septembre"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/octobre"
                    android:checked="false"
                    android:text="Octobre"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/novembre"
                    android:checked="false"
                    android:text="Novembre"
                    android:layout_gravity="center_vertical"
                    />

                <RadioButton
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/decembre"
                    android:checked="false"
                    android:text="Décembre"
                    android:layout_gravity="center_vertical"
                    />

            </RadioGroup>

        </HorizontalScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Récapitulatif"
            android:id="@+id/recapitulatif"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/liste_paiements"
                        android:layout_gravity="center_horizontal"/>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

    </LinearLayout>

</RelativeLayout>
